---
const currentYear = new Date().getFullYear();
const siteName = "fevnem";

const footerLinks = {
  explore: [
    { text: "Articles", href: "/blog" },
    { text: "About", href: "/about" },
    { text: "Contact", href: "/contact" }
  ],
  legal: [
    { text: "Privacy Policy", href: "/privacy" },
    { text: "Terms of Service", href: "/terms" }
  ],
  social: [
    { text: "GitHub", href: "https://github.com/fevnem", icon: "github" },
    { text: "Discord", href: "https://discord.gg/fevnem", icon: "discord" }
  ]
};
---

<footer class="bg-gradient-to-b from-gray-900 to-black border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-4 py-6">
    <!-- Newsletter Section -->
    <div class="max-w-2xl mx-auto text-center mb-6">
      <form class="flex gap-2" onsubmit="event.preventDefault(); handleSubscribe();">
        <div class="flex-1 min-w-0">
          <label for="email-input" class="sr-only">Email address</label>
          <input
            id="email-input"
            type="email"
            required
            placeholder="Enter your email"
            class="w-full px-3 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/20 transition-all duration-200"
          />
        </div>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-blue-500 transition-colors duration-200"
        >
          Subscribe
        </button>
      </form>
    </div>

    <!-- Main Footer Content -->
    <div class="flex flex-wrap justify-center items-center gap-x-8 gap-y-2 mb-6">
      <!-- Explore Links -->
      {footerLinks.explore.map(link => (
        <a
          href={link.href}
          class="text-sm text-gray-400 hover:text-white transition-colors duration-200"
        >
          {link.text}
        </a>
      ))}

      <span class="hidden md:block text-gray-600">|</span>

      <!-- Legal Links -->
      {footerLinks.legal.map(link => (
        <a
          href={link.href}
          class="text-sm text-gray-400 hover:text-white transition-colors duration-200"
        >
          {link.text}
        </a>
      ))}

      <span class="hidden md:block text-gray-600">|</span>

      <!-- Social Links -->
      {footerLinks.social.map(link => (
        <a
          href={link.href}
          class="text-sm text-gray-400 hover:text-white transition-colors duration-200 flex items-center gap-1"
          target="_blank"
          rel="noopener noreferrer"
        >
          {link.icon === 'github' && (
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
            </svg>
          )}
          {link.icon === 'discord' && (
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
            </svg>
          )}
          <span>{link.text}</span>
        </a>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="text-center">
      <p class="text-sm text-gray-500">
        Â© {currentYear} {siteName}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<script>
  function handleSubscribe() {
    const emailInput = document.getElementById('email-input') as HTMLInputElement;
    if (emailInput?.value) {
      alert(`Thanks for subscribing! We'll send updates to ${emailInput.value}`);
      emailInput.value = '';
    }
  }
</script>

<style>
  /* Enhanced mobile experience */
  @media (max-width: 768px) {
    footer {
      font-size: 0.9375rem;
    }

    /* Improved touch targets */
    a {
      padding: 0.5rem;
      display: inline-flex;
      align-items: center;
    }
  }

  /* Smooth transitions */
  a, button {
    transition: all 0.2s ease-in-out;
  }

  /* Focus styles */
  :focus-visible {
    outline: none;
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
  }
</style>
