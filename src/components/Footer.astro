---
const currentYear = new Date().getFullYear();
const siteName = "therocketor";

const links = [
  { href: '/blog', text: 'Articles' },
  { href: '/about', text: 'About' },
  { href: '/privacy', text: 'Privacy' },
  { href: '/terms', text: 'Terms' },
  { href: '/contact', text: 'Contact' },
  { href: '/rss.xml', text: 'RSS' }
];
---

<footer class="bg-gray-900/95 backdrop-blur-sm border-t border-gray-800/50">
  <div class="container mx-auto px-4">
    <!-- Newsletter Subscription -->
    <div class="py-6 border-b border-gray-800/50">
      <div class="max-w-xl mx-auto">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-medium text-white">Stay Updated</h3>
          <div class="text-sm text-gray-500">Â© {currentYear} {siteName}</div>
        </div>
        <form class="flex gap-2" onsubmit="event.preventDefault();">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 bg-gray-800/50 text-sm text-gray-200 placeholder-gray-400 rounded-lg py-2 px-4 border border-gray-700/50 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50"
            required
          />
          <button
            type="submit"
            class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:ring-offset-2 focus:ring-offset-gray-900 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>

    <!-- Footer Links -->
    <div class="py-4">
      <nav class="flex flex-wrap justify-center gap-x-6 gap-y-2 mb-4">
        {links.map(link => (
          <a
            href={link.href}
            class="px-2 py-1 text-sm text-gray-300 hover:text-white transition-colors"
          >
            {link.text}
          </a>
        ))}
      </nav>

      <div class="flex flex-col items-center">
        <!-- Social Links -->
        <div class="flex items-center gap-4">
          <a 
            href="https://github.com/therocketor" 
            class="p-2 text-gray-400 hover:text-white hover:bg-gray-800/50 rounded-lg transition-colors"
            target="_blank" 
            rel="noopener noreferrer"
