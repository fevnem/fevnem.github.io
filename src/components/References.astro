---
interface Reference {
  id: string;
  title: string;
  url?: string;
  authors?: string[];
  date?: string;
}

interface Props {
  references: Reference[];
}

const { references } = Astro.props;
---

<div class="references bg-gray-900 border border-gray-800 rounded-lg p-6 mt-12">
  <h2 class="text-xl font-semibold mb-4 pb-2 border-b border-gray-800">References</h2>
  <ol class="space-y-3">
    {references.map((ref, index) => (
      <li id={`ref-${ref.id}`} class="flex gap-2">
        <span class="text-gray-500">[{index + 1}]</span>
        <div>
          {ref.url ? (
            <a href={ref.url} class="text-blue-400 hover:underline" target="_blank" rel="noopener noreferrer">
              {ref.title}
            </a>
          ) : (
            <span>{ref.title}</span>
          )}
          {ref.authors && (
            <span class="text-gray-400 block text-sm">
              {ref.authors.join(', ')}
            </span>
          )}
          {ref.date && (
            <span class="text-gray-500 text-sm">
              ({ref.date})
            </span>
          )}
        </div>
      </li>
    ))}
  </ol>
</div>