---
interface Props {
  showExtended?: boolean;
}

const { showExtended = false } = Astro.props;

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/therocketor', icon: 'github' },
  { name: 'Twitter', url: 'https://twitter.com/therocketor', icon: 'twitter' },
  { name: 'LinkedIn', url: 'https://linkedin.com/in/therocketor', icon: 'linkedin' }
];

const skills = [
  'Web Development',
  'Technical Writing',
  'System Design',
  'DevOps',
  'UI/UX'
];
---

<div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-xl p-6 md:p-8 mt-12 border border-gray-700/50 shadow-xl relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
        <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
      </pattern>
      <rect width="100" height="100" fill="url(#grid)"/>
    </svg>
  </div>

  <div class="relative">
    <!-- Author Header -->
    <div class="flex flex-col md:flex-row md:items-center gap-6">
      <div class="relative group">
        <div class="absolute -inset-0.5 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full opacity-50 group-hover:opacity-75 transition duration-300 blur"></div>
        <img
          src="https://avatars.githubusercontent.com/u/121660659?s=400&u=77645887094d33573747a8108895a9237448bf32&v=4"
          alt="Author Avatar"
          class="relative w-24 h-24 md:w-28 md:h-28 rounded-full bg-gray-800 ring-4 ring-gray-800"
          width="112"
          height="112"
        />
      </div>
      
      <div class="flex-1">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h3 class="text-2xl font-bold mb-2 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
              Rocket
            </h3>
            <p class="text-gray-400 text-sm md:text-base leading-relaxed max-w-2xl">
              Digital gardener, perpetual learner, and technology enthusiast. Sharing insights about software development, system design, and technical writing.
            </p>
          </div>
          
          <!-- Social Links -->
          <div class="flex gap-3 md:gap-4">
            {socialLinks.map(link => (
              <a
                href={link.url}
                class="text-gray-400 hover:text-white transition-colors p-2 hover:bg-gray-700/50 rounded-lg"
                target="_blank"
                rel="noopener noreferrer"
                aria-label={`Follow on ${link.name}`}
              >
                {link.icon === 'github' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                  </svg>
                )}
                {link.icon === 'twitter' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}
                {link.icon === 'linkedin' && (
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

        {showExtended && (
          <div class="mt-6 space-y-6">
            <!-- Skills -->
            <div class="flex flex-wrap gap-2">
              {skills.map(skill => (
                <span class="px-3 py-1 bg-gray-700/30 text-gray-300 text-sm rounded-full">
                  {skill}
                </span>
              ))}
            </div>

            <!-- Extended Bio -->
            <div class="prose prose-invert max-w-none">
              <p class="text-gray-300 leading-relaxed">
                With over a decade of experience in software development, I focus on creating scalable solutions 
                and sharing knowledge through clear, practical writing. This digital garden serves as my personal 
                wiki where I document my learning journey and insights across various technical domains.
              </p>
            </div>

            <!-- Latest Activity -->
            <div class="border-t border-gray-700/50 pt-6 mt-6">
              <h4 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4">Latest Activity</h4>
              <div class="space-y-3">
                <div class="flex items-center gap-3 text-sm">
                  <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                  <span class="text-gray-300">Updated article on System Design</span>
                  <span class="text-gray-500">2 days ago</span>
                </div>
                <div class="flex items-center gap-3 text-sm">
                  <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
                  <span class="text-gray-300">Added new DevOps guide</span>
                  <span class="text-gray-500">5 days ago</span>
                </div>
              </div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</div>

<style>
  /* Smooth hover transitions */
  a, button {
    transition: all 0.2s ease-in-out;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .prose {
      font-size: 0.95rem;
    }
    
    .social-links {
      justify-content: center;
    }
  }

  /* Gradient animation */
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .bg-gradient-animate {
    background-size: 200% 200%;
    animation: gradient 15s ease infinite;
  }
</style>