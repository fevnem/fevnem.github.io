---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact Us"
  description="Get in touch with us for any questions or inquiries"
>
  <div class="max-w-2xl mx-auto px-4">
    <h1 class="text-3xl font-bold mb-8">Contact Us</h1>

    <div class="bg-gray-900/30 border border-gray-800 rounded-xl p-6 mb-8">
      <form class="space-y-6" onsubmit="event.preventDefault(); handleSubmit();">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-200 mb-2">
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50"
            placeholder="Your name"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-200 mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50"
            placeholder="your@email.com"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-gray-200 mb-2">
            Subject
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50"
            placeholder="What's this about?"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-200 mb-2">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="6"
            required
            class="w-full px-4 py-2 bg-gray-800/50 border border-gray-700 rounded-lg text-gray-200 placeholder-gray-500 focus:outline-none focus:border-blue-500/50 focus:ring-1 focus:ring-blue-500/50"
            placeholder="Your message..."
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:ring-offset-2 focus:ring-offset-gray-900 transition-colors"
        >
          Send Message
        </button>
      </form>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      <div class="bg-gray-900/30 border border-gray-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">Other Ways to Reach Us</h2>
        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-gray-400 mb-1">Email</h3>
            <a href="mailto:contact@example.com" class="text-blue-400 hover:text-blue-300">
              contact@example.com
            </a>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-400 mb-1">Social Media</h3>
            <div class="flex gap-4">
              <a href="#" class="text-gray-400 hover:text-white">
                Twitter
              </a>
              <a href="#" class="text-gray-400 hover:text-white">
                LinkedIn
              </a>
              <a href="#" class="text-gray-400 hover:text-white">
                GitHub
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-gray-900/30 border border-gray-800 rounded-xl p-6">
        <h2 class="text-xl font-semibold mb-4">FAQ</h2>
        <div class="space-y-4">
          <div>
            <h3 class="text-sm font-medium text-gray-200">Response Time</h3>
            <p class="text-gray-400">We typically respond within 24-48 hours.</p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-200">Business Hours</h3>
            <p class="text-gray-400">Monday to Friday, 9:00 AM - 5:00 PM EST</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function handleSubmit() {
      // Here you would typically send the form data to your backend
      alert('Thank you for your message! This is a demo form.');
    }
  </script>
</Layout>